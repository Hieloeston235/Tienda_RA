<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_categorias"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/imageViewProductoCarrito"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnEliminarProducto"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:drawableBottom="@drawable/baseline_auto_delete_24"
        app:layout_constraintStart_toEndOf="@+id/txtNomreCarritoProducto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomreCarritoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductoCarrito"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPrecioCarritoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductoCarrito"
        app:layout_constraintTop_toBottomOf="@+id/txtNomreCarritoProducto" />

</androidx.constraintlayout.widget.ConstraintLayout>