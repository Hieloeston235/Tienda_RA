<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_margin="5dp"

    android:layout_height="100dp">

    <ImageView
        android:id="@+id/imageViewProductoCarrito"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtNomreCarritoProducto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnEliminarProducto"
        android:layout_width="63dp"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF0707"
        android:drawableBottom="@drawable/baseline_auto_delete_24"
        app:layout_constraintStart_toEndOf="@+id/txtNomreCarritoProducto"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNomreCarritoProducto"
        android:layout_width="80dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductoCarrito"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPrecioCarritoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#4B6D97"
        app:layout_constraintStart_toEndOf="@+id/imageViewProductoCarrito"
        app:layout_constraintTop_toBottomOf="@+id/txtNomreCarritoProducto" />

    <TextView
        android:id="@+id/textButtom_decrement"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="31dp"
        android:background="@drawable/bg_categorias"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEliminarProducto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.481" />

    <TextView
        android:id="@+id/text_value"
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textButtom_increment"
        app:layout_constraintStart_toEndOf="@+id/textButtom_decrement"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <TextView
        android:id="@+id/textButtom_increment"
        android:layout_width="22dp"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_categorias"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />


</androidx.constraintlayout.widget.ConstraintLayout>